{{> local_experience/controls }}

<h4>{{#str}} rules, local_experience {{/str}}</h4>

<p>{{#str}} rules:description, local_experience {{/str}}</p>
<p>{{#str}} rules:removenotice, local_experience {{/str}}</p>
<form method="POST" action="" enctype="multipart/form-data">

{{#rules}}
<h5>#{{id}}: {{name}}</h5>
<table width="100%" class="generaltable" style="border-bottom: 2px solid darkgray;">
    <tr>
        <th colspan="2">
            <input type="text" name="name[{{id}}]" value="{{name}}" class="btn-block" placeholder="{{#str}} name {{/str}}" />
        </th>
    </tr>
    <tr>
        <th colspan="2">
            <input type="number" min="1" max="99" name="sort[{{id}}]" value="{{sort}}" class="btn-block" placeholder="{{#str}} sort {{/str}}" />
        </th>
    </tr>
    <tr>
        <td valign="top">
            {{#str}} rules:elementstohide, local_experience {{/str}}
            <textarea name="elementstohide[{{id}}]" class="btn-block" rows="10">{{elementstohide}}</textarea>
        </td>
        <td valign="top">
            {{#str}} rules:elementstoset, local_experience {{/str}}
            <textarea name="elementstoset[{{id}}]" class="btn-block" rows="10">{{elementstoset}}</textarea>
        </td>
    </tr>
</table>
{{/rules}}
<table width="100%" class="generaltable">
    <tr>
        <td><input type="submit" name="addrule" value="{{#str}} rules:add, local_experience {{/str}}" class="btn btn-block btn-secondary" /></td>
        <td><input type="submit" name="store" value="{{#str}} submit {{/str}}" class="btn btn-block btn-primary" /></td>
    </tr>
</table>
</form>
